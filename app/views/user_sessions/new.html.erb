<div class='md:flex flex-row text-center flex justify-center'>
  <div class=' border-b-2 mt-10 mb-10 text-center '>
    <p class="w-[450px] mb-5 text-xl text-gray-900 text-black-500">ログイン</p>
  </div>
</div>
  <div class='flex justify-center'>
  <div class="w-full max-w-md">
      <%= form_with url: login_path, local: true do |form| %>
      
    <div class="form-group">
      <%= form.label :email, "メールアドレス" %>
      <%= form.text_field :email, class: "w-full mb-10 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-100 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "name@flowbite.com" %>
    </div>
    <div class="form-group">
        <%= form.label :password, "パスワード" %>
        <%= form.password_field :password, class: "w-full mb-10 col-md-6 offset-md-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-100 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "•••••••••" %>
    </div>
    <div class="text-center">
        <%= form.submit "ログイン", class: "w-[200px] mt-10 mb-10 focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:focus:ring-yellow-900" %>
    </div>
    <% end %>  
    </div>
    </div>
    <div class="text-center my-8">
    <%= link_to "新規登録はこちら", new_user_path %>
    </div>
    <div class="text-center my-8">
    <%= link_to "パスワードをお忘れの方", new_password_reset_path %>
    </div>
    <div class="flex justify-center">
    <div class="w-[450px] divider mb-10"></div>
    
    </div>
