<div>
  <h1 class="font-bold text-4xl">薬を登録する画面</h1>
</div>
<div class='text-cente flex justify-center'>
      <%= form_with model: @drug, local: true do |form| %>
      <div class=" my-3 card w-full bg-base-100 shadow-2xl">
        <div class="form-group">
          <%= form.label :hospital_name %>
          <%= form.text_field :hospital_name,class: " w-[300px] mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "例：ひまわりクリニック" %>
        </div>

        <div class="form-group">
          <%= form.label :drug_name %>
          <%= form.text_field :drug_name,class: "w-[300px] mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "例：ミグリトール" %>
        </div>

        <div class="form-group">
        
          <%= form.label :number_of_tablets %>
          <%= form.number_field :number_of_tablets,class: "w-[300px] mb-6 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "30" %>
        </div>

        <div class="field">
          <%= form.label :image_url %>
          <%= form.file_field :image_url , class: 'form-control mb-3', size: '300x200'%>
