<% content_for(:title) %>
<div class="col-sm-12 col-lg-4 mb-3">
  <div id="drug-id-<%= drug.id %>">
    <div class="card">
    <%= image_tag drug.image_url_url, class: 'card-img-top', size: '300x200' %> 
      <div class="card-body">
        <ul class="list-inline">
          <li><%= drug.hospital_name %></li>
          <li><%= drug.drug_name %></li>
          <li><%= drug.number_of_tablets %></li>
          <!-- 複数服用タイミングを表示させる　--->
          <li><%= drug.take_times.decorate.take_time %></li>
          <li><%= l drug.created_at, format: :short %></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
        <h4 class="card-title">
            <%= link_to "詳細を見る", show_drug_path(drug)%>
          </h4>
      </div>
    </div>
  </div>
</div>